# Crown Social Network - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000
HOST=localhost
BASE_URL=https://yourdomain.com

# ===========================================
# SECURITY - CRITICAL: Generate strong random keys
# ===========================================
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_super_secure_session_secret_min_64_chars_long
JWT_SECRET=your_super_secure_jwt_secret_min_64_chars_long
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_min_64_chars_long

# JWT Token Expiry
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/crown_db
# For production MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/crown_db

# ===========================================
# REDIS CONFIGURATION (Optional but recommended)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TLS=false

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_SERVICE=production
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Crown Social Network

# Production SMTP (e.g., SendGrid, Mailgun)
PROD_SMTP_HOST=smtp.sendgrid.net
PROD_SMTP_PORT=587
PROD_SMTP_SECURE=true
PROD_SMTP_USER=apikey
PROD_SMTP_PASS=your_sendgrid_api_key

# Development SMTP (optional)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password

# ===========================================
# OAUTH CONFIGURATION
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=/auth/facebook/callback

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DIR=./uploads

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# ENCRYPTION & SECURITY
# ===========================================
# AES encryption key for sensitive data (32 bytes)
AES_ENCRYPTION_KEY=your_32_byte_aes_encryption_key_here
# Password hash salt rounds (12-15 recommended)
BCRYPT_SALT_ROUNDS=12

# ===========================================
# SSL/TLS (Production)
# ===========================================
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
FORCE_HTTPS=true

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# CDN (optional)
CDN_URL=https://cdn.yourdomain.com

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Remove in production
DEBUG_MODE=false
MOCK_EMAIL=false
