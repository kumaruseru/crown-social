# Crown Social Network - Production Environment
# Domain: cown.name.vn
NODE_ENV=production
PORT=3000

# Database (Update with your MongoDB connection)
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/crown-production
DB_NAME=crown-production

# JWT Secret (Generate a strong secret)
JWT_SECRET=your-super-secure-jwt-secret-for-production-2025

# Session Secret (Generate a strong secret)
SESSION_SECRET=your-super-secure-session-secret-for-production-2025

# Email Configuration (Update with your SMTP settings)
EMAIL_FROM=noreply@cown.name.vn
EMAIL_HOST=mail.cown.name.vn
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your-email@cown.name.vn
EMAIL_PASS=your-email-password

# OAuth Settings (Update with your app credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://cown.name.vn/auth/google/callback

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=https://cown.name.vn/auth/facebook/callback

# Domain Settings
DOMAIN=cown.name.vn
BASE_URL=https://cown.name.vn
CORS_ORIGIN=https://cown.name.vn

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# SSL Settings
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=true
