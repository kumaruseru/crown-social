{
  "name": "crown2",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "Trong Nghia",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "docker:build": "docker build -t crown-app .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:detached": "docker-compose -f docker-compose.dev.yml up --build -d",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f crown-app-dev",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:clean": "docker-compose -f docker-compose.dev.yml down -v && docker system prune -f",
    "docker:prod": "docker-compose up --build -d",
    "docker:prod:logs": "docker-compose logs -f crown-app",
    "docker:prod:stop": "docker-compose down",
    "docker:prod:clean": "docker-compose down -v && docker system prune -f",
    "docker:ssl": "bash scripts/generate-ssl.sh",
    "docker:ssl:win": "powershell -ExecutionPolicy Bypass -File scripts/generate-ssl.ps1",
    "docker:deploy:dev": "bash scripts/deploy.sh -e development",
    "docker:deploy:prod": "bash scripts/deploy.sh -e production",
    "docker:deploy:dev:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -Environment development",
    "docker:deploy:prod:win": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -Environment production",
    "docker:health": "curl -f http://localhost/health || echo 'Health check failed'",
    "docker:logs": "docker-compose logs -f crown-app",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "leaflet-control-geocoder": "^3.2.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "nominatim-browser": "^2.1.0",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
