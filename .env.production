# Crown Social Network - Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
HTTPS_PORT=3443
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/crown_production
MONGODB_OPTIONS={"authSource":"admin","ssl":true,"replicaSet":"rs0"}

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Security Configuration
SESSION_SECRET=your_super_secure_session_secret_here_production_2024
JWT_SECRET=your_super_secure_jwt_secret_here_production_2024
ENCRYPTION_KEY=your_32_character_encryption_key_here
BCRYPT_ROUNDS=12

# SSL/HTTPS Configuration
SSL_KEY_PATH=./docker/ssl/key.pem
SSL_CERT_PATH=./docker/ssl/cert.pem
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# GDPR Configuration
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
COOKIE_CONSENT_REQUIRED=true
RIGHT_TO_DELETE_ENABLED=true

# SIEM Configuration
SIEM_ENABLED=true
SIEM_SERVER_URL=https://your-siem-server.com/api
SIEM_API_KEY=your_siem_api_key_here
LOG_LEVEL=info

# WAF Configuration
WAF_ENABLED=true
WAF_BLOCK_SUSPICIOUS_IPS=true
WAF_SQL_INJECTION_PROTECTION=true
WAF_XSS_PROTECTION=true
WAF_RATE_LIMITING=true

# Monitoring and Analytics
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
ANALYTICS_ENABLED=true

# Third-party Services
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Performance Configuration
COMPRESSION_ENABLED=true
CACHE_ENABLED=true
CACHE_TTL=3600

# Development Tools (disable in production)
DEBUG=false
SHOW_STACK_TRACES=false
ENABLE_CORS=false
